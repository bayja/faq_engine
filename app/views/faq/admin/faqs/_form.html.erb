<%= simple_form_for [:admin, @faq], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>자주하는 질문 등록/수정</legend>
    <%= f.association :category, :include_blank => false %>
    <%= f.input :question %>
    <%= f.input :answer %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', [:admin, :faqs], :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
